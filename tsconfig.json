{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "es2017"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "target":"es2020",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "*": [
          "src/*"
      ],
      "@assets/*": [
          "src/assets/*"
      ],
      "@components/*": [
          "src/components/*"
      ],
      "@config/*": [
          "src/config/*"
      ],
      "@features/*": [
          "src/features/*"
      ],
      "@i18n/*": [
        "src/i18n/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@navigation/*": [
          "src/navigation/*"
      ],
      "@reducers/*": [
          "src/reducers/*"
      ],
      "@services/*": [
          "src/services/*"
      ],
      "@utils/*": [
          "src/utils/*"
      ]
  }
  },
  "typeRoots": ["types"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
